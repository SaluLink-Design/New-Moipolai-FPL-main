# Environment
ENV=development

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Railway automatically sets PORT - don't set this locally
# PORT=8000  # Only set by Railway in production

# Database - Supabase PostgreSQL
DATABASE_URL=postgresql+asyncpg://postgres.[PROJECT_REF]:[PASSWORD]@aws-0-us-east-1.pooler.supabase.com:6543/postgres
SUPABASE_URL=https://[PROJECT_REF].supabase.co
SUPABASE_ANON_KEY=[YOUR_ANON_KEY]

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# FPL API
FPL_API_BASE_URL=https://fantasy.premierleague.com/api
FPL_CACHE_TTL=3600  # 1 hour
FPL_DEADLINE_CACHE_TTL=300  # 5 minutes on deadline day

# ML Models
MODEL_PATH=./models
MODEL_VERSION=v1
RETRAIN_SCHEDULE=0 2 * * 1  # Every Monday at 2 AM

# OCR
OCR_ENGINE=easyocr  # tesseract or easyocr
OCR_LANGUAGES=en
OCR_CONFIDENCE_THRESHOLD=0.6

# Fuzzy Matching
FUZZY_MATCH_THRESHOLD=80

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# Monitoring
SENTRY_DSN=
MLFLOW_TRACKING_URI=./mlruns

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

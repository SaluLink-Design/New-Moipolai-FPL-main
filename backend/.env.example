# FPL AI Backend Environment Variables

# Environment
ENV=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Database
DATABASE_URL=sqlite:///./fpl_ai.db
SUPABASE_URL=
SUPABASE_ANON_KEY=

# Redis (optional - app works without it)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# FPL API
FPL_API_BASE_URL=https://fantasy.premierleague.com/api
FPL_CACHE_TTL=3600
FPL_DEADLINE_CACHE_TTL=300

# OCR Configuration
OCR_ENGINE=easyocr
OCR_LANGUAGES=en
OCR_CONFIDENCE_THRESHOLD=0.6

# Fuzzy Matching
FUZZY_MATCH_THRESHOLD=80

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS - Allow requests from frontend
# For local development:
CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000
# For production with Fly.dev frontend:
# CORS_ORIGINS=http://localhost:5173,http://localhost:5174,http://localhost:3000,https://1ecd199f81f742549451b8f8384c6014-br-49debbd126ee4555bb3220ec1.fly.dev

# Sentry (optional error tracking)
SENTRY_DSN=

# MLflow
MLFLOW_TRACKING_URI=./mlruns

# Celery (optional background tasks)
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2
